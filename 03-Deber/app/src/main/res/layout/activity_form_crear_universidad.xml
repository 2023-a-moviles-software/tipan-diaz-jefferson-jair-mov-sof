<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormCrearUniversidad">

    <EditText
        android:id="@+id/pt_distribusionSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Numero Estudiantes"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_guardarUni"
        app:layout_constraintEnd_toEndOf="@+id/btn_guardarUni"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/btn_guardarUni" />

    <EditText
        android:id="@+id/pt_nombreSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/pt_versionSO"
        app:layout_constraintEnd_toEndOf="@+id/pt_versionSO"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/pt_versionSO" />

    <EditText
        android:id="@+id/pt_versionSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:hint="Fecha Fundacion"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/pt_distribusionSO"
        app:layout_constraintEnd_toEndOf="@+id/pt_distribusionSO"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pt_distribusionSO" />

    <Button
        android:id="@+id/btn_guardarUni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:layout_marginBottom="28dp"
        android:text="Crear Universidad"
        android:textSize="84px"
        app:layout_constraintBottom_toTopOf="@+id/pt_nombreSO"
        app:layout_constraintEnd_toEndOf="@+id/pt_nombreSO"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/pt_nombreSO" />

</androidx.constraintlayout.widget.ConstraintLayout>