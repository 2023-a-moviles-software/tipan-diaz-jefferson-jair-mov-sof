<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formEditarUniversidad">

    <EditText
        android:id="@+id/pt_cambiar_distribusionSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="Numero Estudiantes"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_guardarCambiosUni"
        app:layout_constraintEnd_toEndOf="@+id/btn_guardarCambiosUni"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/btn_guardarCambiosUni" />

    <EditText
        android:id="@+id/pt_cambiar_nombreSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/pt_cambiar_versionSO"
        app:layout_constraintEnd_toEndOf="@+id/pt_cambiar_versionSO"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/pt_cambiar_versionSO" />

    <EditText
        android:id="@+id/pt_cambiar_versionSO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Fecha Fundacion"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/pt_cambiar_distribusionSO"
        app:layout_constraintEnd_toEndOf="@+id/pt_cambiar_distribusionSO"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pt_cambiar_distribusionSO" />

    <Button
        android:id="@+id/btn_guardarCambiosUni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73" />

    <TextView
        android:id="@+id/tv_nombreSO"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:layout_marginBottom="72dp"
        android:textSize="84px"
        app:layout_constraintBottom_toTopOf="@+id/pt_cambiar_nombreSO"
        app:layout_constraintEnd_toEndOf="@+id/pt_cambiar_nombreSO"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/pt_cambiar_nombreSO" />
</androidx.constraintlayout.widget.ConstraintLayout>